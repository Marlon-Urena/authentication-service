{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "target": "ES6",
    "allowJs": true,
    "lib": ["ES6"],
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "strict": true
}
