{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "esModuleInterop": true,
        "target": "es2018",
        "lib": [
          "es2018", "dom"
        ],
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "outDir": ".dist",
        "baseUrl": ".",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.*ts"
    ],
    "exclude": [
        "node_modules",
        "src/public",
        ".dist"
    ]
}
